<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.questtime">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".QuestTime"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/boja" />

        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="MAINACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".PasswordResetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CreateNewRoom"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PlusButtonActivity"
            android:theme="@style/TransparentTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/TransparentTheme"
           />

        <service android:name=".MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".RoomActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="ROOMACTIVITY"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".AnswerActivity"
            android:theme="@style/TransparentTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".PeopleActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SearchResultsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ExitRoomActivity"
                  android:theme="@style/TransparentTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".ResultActivity"
            android:theme="@style/TransparentTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".JoinPrivateRoom"
            android:theme="@style/TransparentTheme"
            android:screenOrientation="portrait"/>
        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>